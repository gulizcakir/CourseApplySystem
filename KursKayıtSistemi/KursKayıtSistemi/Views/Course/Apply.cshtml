@model Candidate
    <div class="display-6">
      Apply
    </div>

    <form method="post" asp-action="Apply">
        <div class="text-danger" asp-validation-summary="All"></div>
      <div class="form-group my-2" >
        <label asp-for="Email"> E-mail </label>
        <input name ="Email" class="form-control" />
      </div>

    <div class="form-group my-2">
        <label asp-for="FirstName"> </label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group my-2">
        <label asp-for="LastName"> </label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group my-2">
        <label asp-for="Age">  </label>
        <select name="Age" class="form-control">
            <option value="18">18</option>
            <option value="20">20</option>
            <option value="21">21</option>
            <option value="22">22</option>
            <option value="23">23</option>
            <option value="24">24</option>

        </select>
    </div>
    <fieldset>
        <legend> Select One Course</legend>
        <p>
            <input id="api" type="radio" asp-for="SelectedCourse" value="ASP.Net Core" checked />
            <label>ASP.Net Core</label>
        </p>

        <p>
            <input id="api" type="radio" asp-for="SelectedCourse" value="C#"/>
            <label>C#</label>
        </p>

        <p>
            <input id="api" type="radio" asp-for="SelectedCourse" value="Angular" />
            <label>Angular</label>
        </p>
    </fieldset>

    <div>
        <button class="btn btn-primary" type="submit">Apply</button>
        <a class="btn btn-warning" asp-controller="Home" asp-action="Index"> Home </a>
    </div>

</form>

